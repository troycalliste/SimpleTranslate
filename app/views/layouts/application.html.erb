<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTranslate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application',  'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="topnav">
      <div class="search-container">

        <input type="text" id="inputTxt" value="">
        <button class="refSearch" type='button'><i class="fa fa-search"></i></button>

      </div>
      <div class="langselect">
       <form action="/action_page.php">
         <select id="oneSelect" name="language">
            <option value="" selected>English</option>
            <option value="">French</option>
            <option value="">Spanish</option>
            <option value="">Dutch</option>
        </select>
      </form>
      </div>
      <div class="langselect">
        <div class="swap">
          <span>to</span>
        </div>
      </div>
      <div class="langselect">
       <form action="/action_page.php">
         <select id="twoSelect" name="language">

           <option value="">English</option>
           <option value="" selected>French</option>
            <option value="">Spanish</option>
            <option value="">Dutch</option>
        </select>
      </form>
      </div>


    <%= yield %>
  <script src="https://code.responsivevoice.org/responsivevoice.js?key=a1Jq81v2"></script>
  </body>
</html>
